<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.DenunciarFragment"
    android:orientation="vertical"
    android:background="@drawable/bg_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        >
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/bad"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrar una denuncia"
            android:textSize="35dp"
            android:textColor="#FF5722"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_margin="10dp"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="En este modulo podras añadir tu denuncia al registro de denuncias ciudadanas."
            android:layout_marginLeft="5dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rellena los campos de texto con la Informacion. "
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            />
        <EditText
            android:id="@+id/fragment_denunciar_titulo"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_post_add"
            android:paddingRight="25dp"
            android:ems="10"
            android:hint="Titulo de la denuncia"
            android:inputType="textEmailAddress"
            android:paddingStart="12px"
            android:paddingEnd="12px"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:textSize="19sp"
            />

        <EditText
            android:id="@+id/fragment_denunciar_direccion"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_forward_"
            android:paddingRight="25dp"
            android:ems="10"
            android:hint="Direccion del suceso"
            android:inputType="textEmailAddress"
            android:paddingStart="12px"
            android:paddingEnd="12px"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:textSize="19sp"
            />

        <Button
            android:id="@+id/fragment_denunciar_boton"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:layout_marginTop="20dp"
            android:background="@drawable/custom_button"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            android:textColor="#fff"
            android:textSize="15sp"
            android:text="registrar"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="¿Registraste una denuncia?
                                                Revisa el estado Aqui."
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="#03A9F4"
            android:textStyle="bold"
            />

    </LinearLayout>








</LinearLayout>