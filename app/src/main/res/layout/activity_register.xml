<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity"
    android:background="@drawable/bg_color"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:src="@drawable/edit"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eres nuevo"
            android:gravity="center"
            android:textColor="#FF6122"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_marginTop="8dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Solo te tomara 3 minutos!"
            android:gravity="center"
            android:textSize="15dp"
            android:layout_marginTop="4dp"
            />


        <EditText
            android:id="@+id/register_email"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_email"
            android:paddingRight="25dp"
            android:ems="10"

            android:hint="Ingresa tu email"
            android:inputType="textEmailAddress"
            android:paddingStart="12px"
            android:paddingEnd="12px"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:textSize="14sp"

            />
        <EditText
            android:id="@+id/register_nombre"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_use"
            android:paddingRight="25dp"
            android:ems="10"
            android:hint="Ingresa tu nombre"
            android:inputType="textEmailAddress"
            android:paddingStart="12px"
            android:paddingEnd="12px"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:textSize="14sp"
            />
        <EditText
            android:id="@+id/register_celular"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_phone"
            android:paddingRight="25dp"
            android:ems="10"
            android:hint="Ingresa tu numero de telefono"
            android:paddingStart="12px"
            android:paddingEnd="12px"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:textSize="14sp"
            android:inputType="number"
            />
        <EditText
            android:id="@+id/register_clave"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_lock"
            android:paddingRight="25dp"
            android:ems="10"
            android:hint="Ingresa tu nombre"

            android:paddingStart="12px"
            android:paddingEnd="12px"
            android:selectAllOnFocus="false"
            android:singleLine="false"
            android:textSize="14sp"
            android:inputType="numberPassword"
            />

        <Button
            android:layout_width="244dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:onClick="createAccount"
            android:background="@drawable/custom_button"
            android:textColor="#fff"
            android:text="Continuar" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Â¿Ya tienes una cuenta? Inicia Sesion Aqui"
            android:gravity="center"
            android:textColor="#03A9F4"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:onClick="launchLogin"
            />

    </LinearLayout>






</LinearLayout>